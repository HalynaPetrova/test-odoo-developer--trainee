<odoo>
    <record id="view_sale_order_category_report_list" model="ir.ui.view">
        <field name="name">sale.order.category.report.list</field>
        <field name="model">sale.order.category.report</field>
        <field name="arch" type="xml">
            <list string="Sale Order Category Report" create="false" delete="false">
                <field name="order_id"/>
                <field name="category_id"/>
                <field name="products_count"/>
                <field name="total_qty"/>
                <field name="total_amount"/>
                <field name="top_product"/>
            </list>
        </field>
    </record>

    <record id="action_sale_order_category_report" model="ir.actions.act_window">
        <field name="name">Sale Order Category Report</field>
        <field name="res_model">sale.order.category.report</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
